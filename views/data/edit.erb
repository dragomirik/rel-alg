<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="fas fa-database"></i> RelAlg Interpreter</a></li>
            <li class="breadcrumb-item"><a href="/data">Input Data</a></li>
            <li class="breadcrumb-item active">Edit <%= original_name %></li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="custom-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Relation</h5>
            </div>
            <div class="card-body">
                <%= erb :'data/form', locals: {
                    action: "/data/#{original_name}/update",
                    name: name,
                    schema: schema,
                    rows: rows,
                    errors: errors,
                    btn_label: 'Update'
                } %>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="custom-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Guide</h5>
            </div>
            <div class="card-body">
                <%= erb :'data/form_notes' %>
            </div>
        </div>
    </div>
</div>
